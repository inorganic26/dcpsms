{
  "firestore": {
    "rules": "firestore.rules",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/admin/**",
        "destination": "/src/admin/index.html"
      },
      {
        "source": "/teacher/**",
        "destination": "/src/teacher/index.html"
      },
      {
        "source": "/student/**",
        "destination": "/src/student/index.html"
      },
      {
        "source": "/parent/**",
        "destination": "/src/parent/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}