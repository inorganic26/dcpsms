{
  "functions": {
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": [
    {
      "target": "portal",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "admin",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "index.html"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/src/admin/index.html"
        }
      ]
    },
    {
      "target": "teacher",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "index.html"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/src/teacher/index.html"
        }
      ]
    },
    {
      "target": "student",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "index.html"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/src/student/index.html"
        }
      ]
    }
  ]
}