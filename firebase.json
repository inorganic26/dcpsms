{
  "hosting": [
    {
      "target": "portal",
      "site": "svcm-v2",
      "public": "dist-portal",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "/admin/**", "destination": "/admin/index.html" },
        { "source": "**", "destination": "/index.html" }
      ]
    },
    {
      "target": "student",
      "site": "dcprime-s",
      "public": "dist-student",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [{ "source": "**", "destination": "/index.html" }]
    },
    {
      "target": "teacher",
      "site": "t-dcprime",
      "public": "dist-teacher",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [{ "source": "**", "destination": "/index.html" }]
    }
  ]
}
