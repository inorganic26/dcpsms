{
  "firestore": {
    "database": "(default)",
    "location": "asia-northeast3",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "cd functions && npm run lint"
      ],
      "runtime": "nodejs20",
      "memory": "1024MiB",
      "timeoutSeconds": 300,
      "region": "asia-northeast3"
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}