{
  "firestore": {
    "database": "(default)",
    "location": "asia-northeast3",
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "runtime": "nodejs20",
      "memory": "256MiB",
      "timeoutSeconds": 300,
      "region": "asia-northeast3"
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/admin{,/**}",
        "destination": "/src/admin/index.html"
      },
      {
        "source": "/teacher{,/**}",
        "destination": "/src/teacher/index.html"
      },
      {
        "source": "/student{,/**}",
        "destination": "/src/student/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}