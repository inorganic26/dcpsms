{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/admin/**",
        "destination": "/src/admin/index.html"
      },
      {
        "source": "/teacher/**",
        "destination": "/src/teacher/index.html"
      },
      {
        "source": "/student/**",
        "destination": "/src/student/index.html"
      },
      {
        "source": "/parent/**",
        "destination": "/src/parent/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}