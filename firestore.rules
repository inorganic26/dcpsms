      allow create: if isStudent(request.resource.data.studentId);
      allow update, delete: if isStudent(resource.data.studentId);
      allow read: if isParentOf(resource.data.studentId);
    }

    // 10. ê·¸ ì™¸ ì°¨ë‹¨
    match /{document=**} {
