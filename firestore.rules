rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ==========================================
    // 1. 관리자/선생님 판별 (수정 없음)
    // ==========================================
    function isTeacher() {
      return request.auth != null && (
        request.auth.token.email == "inorganic26@gmail.com" || 
        exists(/databases/$(database)/documents/teachers/$(request.auth.uid)) ||
        request.auth.token.role == "teacher" ||
        request.auth.token.role == "admin"
      );
    }

    // ==========================================
    // 2. 학습 콘텐츠 (과목, 숙제문제 등)
    // ==========================================
    match /subjects/{subjectId} {
      allow read: if request.auth != null; // 누구나 읽기 가능
      allow write: if isTeacher();         // 쓰기는 선생님만
      
      match /lessons/{lessonId} {
        allow read: if request.auth != null;
        allow write: if isTeacher();

        // 퀴즈 제출물: 본인 것만!
        match /submissions/{studentId} {
          allow read, write: if isTeacher() || (request.auth != null && request.auth.uid == studentId);
        }
      }
    }

    match /homeworks/{homeworkId} {
      allow read: if request.auth != null;
      allow write: if isTeacher();

      // 숙제 제출물: 본인 것만!
      match /submissions/{studentId} {
        allow read, write: if isTeacher() || (request.auth != null && request.auth.uid == studentId);
      }
    }

    // ==========================================
    // 3. 학생 개인정보 (학생은 본인만, 선생님은 전체)
    // ==========================================
    match /students/{studentId} {
      allow read: if isTeacher() || (request.auth != null && request.auth.uid == studentId);
      allow write: if isTeacher(); 
    }

    // ==========================================
    // 4. 테스트 (일일/주간) - 학생 본인 수정 허용
    // ==========================================
    match /daily_tests/{testId} {
      allow read: if isTeacher() || (request.auth != null && resource.data.studentId == request.auth.uid);
      allow create: if isTeacher() || (request.auth != null && request.resource.data.studentId == request.auth.uid);
      allow update: if isTeacher() || (request.auth != null && resource.data.studentId == request.auth.uid && request.resource.data.studentId == request.auth.uid);
      allow delete: if isTeacher() || (request.auth != null && resource.data.studentId == request.auth.uid);
    }
    
    match /weekly_tests/{testId} {
      allow read: if isTeacher() || (request.auth != null && resource.data.uid == request.auth.uid);
      allow create: if isTeacher() || (request.auth != null && request.resource.data.uid == request.auth.uid);
      allow update: if isTeacher() || (request.auth != null && resource.data.uid == request.auth.uid && request.resource.data.uid == request.auth.uid);
      allow delete: if isTeacher() || (request.auth != null && resource.data.uid == request.auth.uid);
    }

    // ==========================================
    // 5. 기본 규칙 (선생님은 어디든 접근 가능)
    // ==========================================
    match /classes/{document=**} { allow read: if true; allow write: if isTeacher(); }
    match /teachers/{document=**} { allow read: if true; allow write: if isTeacher(); }
    
    // ✨ [핵심 수정] 선생님은 모든 곳에 접근 가능하게 설정
    match /{document=**} {
      allow read, write: if isTeacher();
    }
  }
}